group Templates;

mkclass(name, rec_pkg) ::= <<
ClassPool pool = ClassPool.getDefault();
CtClass cc = pool.makeClass("<name>");
CtClass sc = pool.get("<rec_pkg>.Reconfiguration");
cc.setSuperclass(sc);
>>


list_args(datatype, ids) ::= <<
<ids:{ id | 
CtField <id> = CtField.make("private <datatype> <id>;", cc); 
cc.addField(<id>);}>
>>


proc_args(args) ::= <<
<args:{ a | <a>}>
>>