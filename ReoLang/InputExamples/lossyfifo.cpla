pattern LossyFifo(a:c){
	use: 
		(E)fifo~1(i:o)		as fe ;
		lossy(i:o)			as ls ;
		 
	in:  
		a = ls.i;  
		c = fe.o;  
		join [fe.i, ls.o] as j ; 
}


stochastic LossyFifo {
	a @ 15.958; 
	c @ 94.304;
	fe#aB @ 100000.0;
	fe#Bb @ 100000.0;
	ls#ab @ 100000.0;
	ls#aL @ 100000.0;
} lossyfifo



