<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.editors">
      <editor
            name="CooPLa Editor"
            extensions="cpla"
            icon="icons/coopla.gif"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            class="pt.uminho.di.cooplaeditor.editors.CooPLaEditor"
            id="pt.uminho.di.cooplaeditor.editors.CooPLaEditor">
      </editor>
      <editor
            class="pt.uminho.di.cooplaeditor.reconfigurations.editors.ReCooPLaEditor"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            extensions="rcpla"
            icon="icons/recoopla.gif"
            id="pt.uminho.di.cooplaeditor.ReCooPLaEditor"
            name="ReCooPLa Editor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="ReoLangEditor File"
            name="CooPLa Wizard"
            parentCategory="cwi.reo">
      </category>
      <wizard
            category="category.cooplaeditor"
            class="pt.uminho.di.cooplaeditor.wizards.NewCooPLaFileWizard"
            finalPerspective="cooplaeditor.CooPLaPerspective"
            icon="icons/coopla.gif"
            id="pt.uminho.di.cooplaeditor.wizards.NewCooPLaFileWizard"
            name="CooPLa File"
            preferredPerspectives="cooplaeditor.CooPLaPerspective">
      </wizard>
      <category
            id="RecLangEditor"
            name="ReCooPLa Wizard"
            parentCategory="cwi.reo">
      </category>
      <wizard
            category="category.cooplaeditor"
            class="pt.uminho.di.cooplaeditor.wizards.NewReCooPLaFileWizard"
            finalPerspective="cooplaeditor.CooPLaPerspective"
            icon="icons/recoopla.gif"
            id="pt.uminho.di.cooplaeditor.wizards.NewReCooPLaFileWizard"
            name="ReCooPLa File"
            preferredPerspectives="cooplaeditor.CooPLaPerspective">
      </wizard>
      <category
            id="category.cooplaeditor"
            name="CooPLa Editor">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.editors.annotationTypes">
      <type
            name="pt.uminho.di.cooplaeditor.annotations.error"
            super="org.eclipse.ui.workbench.texteditor.error">
      </type>
      <type
            name="pt.uminho.di.cooplaeditor.annotations.warning"
            super="org.eclipse.ui.workbench.texteditor.warning">
      </type>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="category.cooplaeditor"
            name="CooPLa Editor">
      </category>
      <view
            category="category.cooplaeditor"
            class="pt.uminho.di.cooplaeditor.views.CooPLaPatternView"
            icon="icons/pattern_view.gif"
            id="cooplaeditor.views.CooPLaPatternView"
            name="Pattern View">
      </view>
      <category
            id="RecLangPatternsView"
            name="Reconfiguration Views">
      </category>
      <view
            category="RecLangPatternsView"
            class="pt.uminho.di.reolangeditor.reconfigurations.views.RecLangPatternsView"
            icon="icons/sample.gif"
            id="reolangeditor.reconfigurations.views.RecLangPatternsView"
            name="Patterns Created">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="cooplaeditor.CooPLaPerspective">
         <view
               id="cooplaeditor.views.CooPLaPatternView"
               ratio="0.7"
               relationship="right"
               relative="org.eclipse.ui.editorss">
         </view>
         <view
               id="org.eclipse.jdt.ui.PackageExplorer"
               minimized="false"
               ratio="0.2"
               relationship="left"
               relative="org.eclipse.ui.editorss">
         </view>
         <view
               id="org.eclipse.ui.views.ContentOutline"
               minimized="false"
               ratio="0.5"
               relationship="bottom"
               relative="org.eclipse.jdt.ui.PackageExplorer">
         </view>
         <view
               id="org.eclipse.ui.console.ConsoleView"
               minimized="false"
               ratio="0.7"
               relationship="bottom"
               relative="org.eclipse.ui.editorss">
         </view>
         <view
               id="org.eclipse.ui.views.AllMarkersView"
               minimized="false"
               relationship="stack"
               relative="org.eclipse.ui.console.ConsoleView">
         </view>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               id="pt.uminho.di.reolangeditor.reconfigurations.views.SampleView"
               ratio="0.5"
               relationship="right"
               relative="org.eclipse.ui.views.ProblemView">
         </view>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               id="pt.uminho.di.reolangeditor.reconfigurations.editor.adapter.views.SampleView"
               ratio="0.5"
               relationship="right"
               relative="org.eclipse.ui.views.ProblemView">
         </view>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               id="pt.uminho.di.reolangeditor.reconfigurations.views.RecLangPatternsView"
               ratio="0.5"
               relationship="right"
               relative="org.eclipse.ui.views.ProblemView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
      <contexts
            file="contexts.xml">
      </contexts>
      <contexts
            file="contexts.xml">
      </contexts>
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="cooplaeditor.commands.imcreoCommand"
            name="Generate">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="cooplaeditor.menus.toolbar.IMCREOTool">
            <command
                  commandId="cooplaeditor.commands.imcreoCommand"
                  disabledIcon="icons/imcreo_disabled.gif"
                  hoverIcon="icons/imcreo_hover.gif"
                  icon="icons/imcreo.gif"
                  label="IMCREOTool"
                  style="push"
                  tooltip="IMCREOTool">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="pt.uminho.di.cooplaeditor.preferences.CooPLaEditorPreferences"
            id="cooplaeditor.preferences.CooPLaEditorPreferences"
            name="CooPLa Editor">
      </page>
      <page
            category="cooplaeditor.preferences.CooPLaEditorPreferences"
            class="pt.uminho.di.cooplaeditor.preferences.IMCREOToolPreferences"
            id="cooplaeditor.preferences.IMCREOToolPreferences"
            name="IMCReo Tool">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="pt.uminho.di.cooplaeditor.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="pt.uminho.di.reolangeditor.reconfigurations.editors.options.RecLangRun"
            label="Run reconfigurations"
            visible="true">
         <menu
               id="recoopla_options"
               label="ReCooPLa options">
            <separator
                  name="recoopla_run">
            </separator>
         </menu>
         <action
               class="pt.uminho.di.reolangeditor.reconfigurations.editors.options.RecLangRun"
               icon="icons/sample.gif"
               id="reolangeditor.reconfigurations.editors.options.RecLangRun"
               label="Run reconfigurations"
               menubarPath="recoopla_options/recoopla_run"
               toolbarPath="recoopla_run"
               tooltip="Run reconfigurations">
         </action>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.debug.core.launchConfigurationTypes">
   </extension>
   <extension
         point="org.eclipse.core.runtime.adapters">
         <factory
            adaptableType="pt.uminho.di.reolangeditor.reconfigurations.editors.adapter.model.DataModel"
            class="pt.uminho.di.reolangeditor.reconfigurations.editors.adapter.DataModelAdapterFactory">
         <adapter
               type="org.eclipse.ui.views.properties.IPropertySource">
         </adapter>
      </factory>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="pt.uminho.di.cooplaeditor.perspectives.CooPLaPerspectiveFactory"
            id="cooplaeditor.CooPLaPerspective"
            name="CooPLa">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="pt.uminho.di.cooplaeditor.handlers.IMCREOToolWizardHandler"
            commandId="cooplaeditor.commands.imcreoCommand">
         <enabledWhen>
            <with
                  variable="activeEditorId">
               <equals
                     value="pt.uminho.di.cooplaeditor.editors.CooPLaEditor">
               </equals>
            </with>
         </enabledWhen>
      </handler>
   </extension>

</plugin>
