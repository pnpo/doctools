<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.editors">
      <editor
            name="CooPLa Editor"
            extensions="rlf"
            icon="icons/coopla.gif"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            class="pt.uminho.di.cooplaeditor.editors.ReoLangEditor"
            id="pt.uminho.di.cooplaeditor.editors.ReoLangEditor">
      </editor>
      <editor
            class="pt.uminho.di.cooplaeditor.reconfigurations.editors.RecLangEditor"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            extensions="rcfg"
            icon="icons/recoopla.gif"
            id="pt.uminho.di.cooplaeditor.reconfigurationseditors.RecLangEditor"
            name="ReCooPLa Editor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            category="category.cooplaeditor"
            class="pt.uminho.di.cooplaeditor.wizards.NewReoLangFileWizard"
            icon="icons/coopla.gif"
            id="pt.uminho.di.cooplaeditor.wizards.NewReoLangFileWizard"
            name="CooPLa File">
      </wizard>
      <wizard
            category="category.cooplaeditor"
            class="pt.uminho.di.cooplaeditor.wizards.NewRecLangFileWizard"
            icon="icons/recoopla.gif"
            id="pt.uminho.di.cooplaeditor.wizards.NewRecLangFileWizard"
            name="ReCooPLa File">
      </wizard>
      <category
            id="category.cooplaeditor"
            name="CooPLa Editor">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.editors.annotationTypes">
      <type
            name="pt.uminho.di.cooplaeditor.annotations.error"
            super="org.eclipse.ui.workbench.texteditor.error">
      </type>
      <type
            name="pt.uminho.di.cooplaeditor.annotations.warning"
            super="org.eclipse.ui.workbench.texteditor.warning">
      </type>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="category.cooplaeditor"
            name="CooPLa Editor">
      </category>
      <view
            category="category.cooplaeditor"
            class="pt.uminho.di.cooplaeditor.views.ReoLangPatternView"
            icon="icons/pattern_view.gif"
            id="cooplaeditor.views.ReoLangPatternView"
            name="Pattern View">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               id="reolangeditor.views.ReoLangPatternView"
               ratio="0.5"
               relationship="right"
               relative="org.eclipse.ui.views.TaskList">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="pt.uminho.di.cooplaeditor.handlers.IMCREOToolWizardHandler"
            id="cooplaeditor.commands.imcreoCommand"
            name="Generate">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="cooplaeditor.menus.toolbar.IMCREOTool">
            <command
                  commandId="cooplaeditor.commands.imcreoCommand"
                  disabledIcon="icons/imcreo_disabled.gif"
                  hoverIcon="icons/imcreo_hover.gif"
                  icon="icons/imcreo.gif"
                  label="IMCREOTool"
                  style="push"
                  tooltip="IMCREOTool">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="pt.uminho.di.cooplaeditor.preferences.ReoLangEditorPreferences"
            id="cooplaeditor.preferences.CooPLaEditorPreferences"
            name="CooPLa Editor">
      </page>
      <page
            category="cooplaeditor.preferences.CooPLaEditorPreferences"
            class="pt.uminho.di.cooplaeditor.preferences.IMCREOToolPreferences"
            id="cooplaeditor.preferences.IMCREOToolPreferences"
            name="IMCReo Tool">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="pt.uminho.di.cooplaeditor.preferences.PreferenceInitializer">
      </initializer>
   </extension>

</plugin>
